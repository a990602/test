1.(使用C)
//全形空格為12288，半形空格為32
//其他字元半形(33-126)與全形(65281-65374)的對應關係是：均相差65248
int main(){
    char arr1[25];
    string str="人易科技:上 機 測 驗 - 演算法";
    strcpy(arr1,str.c_str());
    for(int i=0;i<=sizeof(arr1)/sizeof(arr1);i++){
        if(arr1[i]<127){
            arr1[i]=(char)(arr1[i]+65248);
        }
    }
    printf("%s",arr1);
    return 0;
}
